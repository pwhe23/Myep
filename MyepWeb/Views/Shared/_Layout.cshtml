<!doctype html>
<html lang="en-us">
<head>
	<title>MYEP</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/Content/bootstrap/bootstrap.min.css" rel="stylesheet">
	<link href="/Content/styles.css" rel="stylesheet">
	<script type='text/javascript' src='/Content/jquery/jquery.min.js'></script>
	<script type='text/javascript' src='/Content/bootstrap/bootstrap.min.js'></script>
	<script type='text/javascript' src='/Content/scripts.js'></script>
</head>
<body>
	<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
		<div class="container">
			<div class="navbar-header">
				<button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="/" class="navbar-brand">MYEP</a>
			</div>
			<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
				<ul class="nav navbar-nav">
					<li><a href='/interns'>Interns</a></li>
					<li><a href='/employers'>Employers</a></li>
				</ul>
			</nav>
		</div>
	</header>
	<div id="content" class="bs-header">
		<div class="container">
			<h1>@ViewBag.Title</h1>
			@RenderBody()
		</div>
	</div>
	<footer id="footer" class='navbar navbar-fixed-bottom'>
		<div class='container'>
			@if (Request.IsAuthenticated)
			{
				<div><a href='/logout'>Logout @User.Identity.Name</a></div>
			}
		</div>
	</footer>
</body>
</html>
