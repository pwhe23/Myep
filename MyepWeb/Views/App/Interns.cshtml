@model List<InternInfo>
@{
	ViewBag.Title = "Interns List";
}

<div>
	<a href='/intern' class='btn btn-primary'><span class='glyphicon glyphicon-plus'></span> Add Intern</a>
</div>

<div class="table-responsive">
	<table class='table table-condensed table-striped table-hover'>
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Employer</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var m in Model)
			{
				<tr>
					<td><a href='/intern/@m.InternId'>@m.InternId</a></td>
					<td>@m.FullName</td>
					<td>@m.Organization</td>
				</tr>
			}
		</tbody>
	</table>
</div>
