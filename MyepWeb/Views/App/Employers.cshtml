@model List<EmployerInfo>
@{
	ViewBag.Title = "Employers List";
}

<div>
	<a href='/employer' class='btn btn-primary'><span class='glyphicon glyphicon-plus'></span> Add Employer</a>
</div>

<div class="table-responsive">
	<table class='table table-condensed table-striped table-hover'>
		<thead>
			<tr>
				<th>Id</th>
				<th>Organization</th>
				<th>Contact</th>
				<th>Positions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var m in Model)
			{
				<tr>
					<td><a href='/employer/@m.EmployerId'>@m.EmployerId</a></td>
					<td>@m.Organization</td>
					<td>@m.ContactName</td>
					<td>@(m.Filled + "/" + m.Available)</td>
				</tr>
			}
		</tbody>
	</table>
</div>
