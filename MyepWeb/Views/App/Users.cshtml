@model List<UserInfo>
@{
	ViewBag.Title = "List Users";
}

<div>
	<a href='/user' class='btn btn-primary'><span class='glyphicon glyphicon-plus'></span> Add User</a>
</div>

<div class="table-responsive">
	<table class='table table-condensed table-striped table-hover'>
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var m in Model)
			{
				<tr>
					<td><a href='/user/@m.UserId'>@m.UserId</a></td>
					<td>@m.Email</td>
				</tr>
			}
		</tbody>
	</table>
</div>
